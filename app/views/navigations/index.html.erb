<p id="notice"><%= notice %></p>

<h1>Navigations</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Is visible</th>
      <th>Can create</th>
      <th>Can edit</th>
      <th>Can delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @navigations.each do |navigation| %>
      <tr>
        <td><%= navigation.title %></td>
        <td><%= navigation.is_visible %></td>
        <td><%= navigation.can_create %></td>
        <td><%= navigation.can_edit %></td>
        <td><%= navigation.can_delete %></td>
        <td><%= link_to 'Show', navigation %></td>
        <td><%= link_to 'Edit', edit_navigation_path(navigation) %></td>
        <td><%= link_to 'Destroy', navigation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

